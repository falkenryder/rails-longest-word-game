<div class="container">
  <div class="row">
  <div class="col-9">
  <h1 style="text-align:center" class="mb-3">New Game</h1>
    <ul>
      <% @letters.each do |letter| %>
        <li><%= letter %></li>
      <% end %>
    </ul>
    <br>
  <form action="/score" method="post" data-turbo="false">
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <div class="input-group mb-3">
    <%= hidden_field_tag 'letters', @letters %>
      <input type="text" name="word" id="word" class="form-control" aria-describedby="button">
      <button type="submit" class="btn btn-primary" id="button">Play</button>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
  </div>
  </div>
</div>
